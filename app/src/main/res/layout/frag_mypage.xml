<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#FFFFFF"
    android:layout_gravity="center"

    tools:context=".TestActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3c5fcf"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/nanumsquareeb"
            android:text="                                My page"
            android:gravity="center"
            android:textColor="#FFFFFF" />
        <ImageButton
            android:id="@+id/swap"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#919BF1"
            android:layout_marginLeft="60dp"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:layout_gravity="center">

        </ImageButton>
"
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14.5"
        android:background="#DEE3EF"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:orientation="vertical"
            android:gravity="center"
            android:background="#DEE3EF"
            >

            <LinearLayout
                android:id="@+id/사용자정보"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:background="@drawable/white_round2"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cat2"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareeb"
                    android:text="관리자"
                    android:textSize="16dp"
                    android:textColor="#6C6B6B"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="center_horizontal"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareeb"
                    android:text="longstone@naver.com"
                    android:textSize="16dp"
                    android:textColor="#6C6B6B"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/좌석정보"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:background="@drawable/white_round2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:elevation="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:fontFamily="@font/nanumsquareeb"
                    android:text="    좌석정보"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="0dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareeb"
                    android:text="인하대학교"
                    android:textColor="#9C9EF4"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareeb"
                    android:text="정석학술정보관 - 제1열람실 / 113"
                    android:textColor="#9C9EF4"
                    android:textSize="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="35dp"></TextView>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/two"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/white_round2"
                    android:orientation="vertical"
                    android:elevation="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용시간"
                        android:fontFamily="@font/nanumsquareeb"
                        android:layout_margin="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="23dp"
                        android:fontFamily="@font/nanumsquareeb"
                        android:text="03:43:55"
                        android:textColor="#9C9EF4"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="165dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/white_round2"
                    android:orientation="vertical"
                    android:elevation="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용상태"
                        android:fontFamily="@font/nanumsquareeb"
                        android:layout_margin="15dp"
                        android:textSize="16dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용중"
                        android:textColor="#E14990"
                       android:layout_gravity="center"
                        android:fontFamily="@font/nanumsquareeb"
                        android:textSize="16dp"
                        android:layout_marginTop="23dp"/>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:background="@drawable/white_round2"
                android:elevation="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="16dp"
                    android:text="즐겨찾는 장소"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/nanumsquareeb"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@drawable/white_round"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/p1"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:fontFamily="@font/nanumsquareeb"
                        android:textColor="#000000"
                        android:text="정석학술정보관"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/hart1"
                        android:layout_gravity="center"
                        android:layout_margin="50dp"
                        />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#B4BADC"
        android:orientation="horizontal"
        ></LinearLayout>

</LinearLayout>

