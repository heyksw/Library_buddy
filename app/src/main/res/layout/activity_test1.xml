<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#FFFFFF"

    tools:context=".TestActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#3c5fcf"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanumsquareeb"
            android:text="정석학술정보관 - 제1열람실"
            android:gravity="center"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:gravity="top"
        android:background="@drawable/image2"
        >
        <!-- 인하대 마크 들어갈 부분 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/u8"
                android:background="@drawable/image_round"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:fontFamily="@font/nanumsquareeb"
                android:text="이용중"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:fontFamily="@font/nanumsquareeb"
                android:text="이용가능"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:fontFamily="@font/nanumsquareeb"
                android:text="좌석전체"
                android:gravity="center"
                />
        </LinearLayout>

        <!-- db 에서 받아온 수치 정보가 들어가는 곳. id 주목-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="67"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/usable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="53"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="120"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#3c5fcf"
        >

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:background="@drawable/white_round">



            <LinearLayout
                android:id="@+id/blueBar"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:background="@drawable/blue_round"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/redBar"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/red_roung">

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <!-- 테이블 부분 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#DEE3EF"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#9FA5CA"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/navigationbar_fake"
            />

    </LinearLayout>



</LinearLayout>
